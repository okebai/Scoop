@model Scoop.Core.ConnectionStorage.ConnectionModel
<div class="modal" id="connectModal" tabindex="-1" role="dialog" aria-labelledby="connectModalTitle" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="connectModalTitle">Connect to server</h4>
            </div>
            <div class="modal-body">

                <ul class="nav nav-tabs" role="tablist" id="myTab">
                    <li role="presentation" class="active"><a href="#connectModalTabMyServers" aria-controls="home" role="tab" data-toggle="tab">My servers</a></li>
                    <li role="presentation"><a href="#connectModalTabAddNewServer" aria-controls="profile" role="tab" data-toggle="tab">Add new server</a></li>
                </ul>

                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="connectModalTabMyServers">
                        <ul class="connect-server-list fa fa-ul">
                            <li class="connect-template template">
                                <i class="fa-li fa fa-check-square connected-icon"></i>
                                <i class="fa-li fa fa-square-o disconnected-icon"></i>
                                <span class="connect-name"></span>
                                <small class="connect-uri"></small>
                                <button class="btn btn-xs btn-success connect-button"><i class="fa fa-plug"></i>Connect</button>
                                <button class="btn btn-xs btn-danger disconnect-button"><i class="fa fa-times"></i>Disconnect</button>
                            </li>
                        </ul>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="connectModalTabAddNewServer">
                        <div class="row">
                            <div class="col-x-12">
                                @using (Html.BeginForm("ConnectPost", "Connection", FormMethod.Post, new { @id = "connectModalForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        <label for="@Html.IdFor(model => model.Name)">Name</label>
                                        @Html.TextBoxFor(model => model.Name, new { @placeholder = "Name", @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label for="@Html.IdFor(model => model.Uri)">Uri</label>
                                        @Html.TextBoxFor(model => model.Uri, new { @placeholder = "Uri", @class = "form-control" })
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            @Html.CheckBoxFor(model => model.AutoConnect) Auto connect
                                        </label>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Add</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
